@model DSWebUI.Models.DogOrderVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Order</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BuyerId" class="control-label"></label>
                <select asp-for="BuyerId" class="form-control">
                    @{
                        foreach (var item in Model.BuyerList)
                        {
                                        <option title="@item" value="@item">@item</option>
                        }
                    }
                </select>
                <span asp-validation-for="BuyerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="StoreId" value=@Model.StoreId />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("My Number Isn't Here", "Create", "DogBuyer")
</div>
<div>
    @Html.ActionLink("Back to Stores", "CustomerIndex", "StoreLocation")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
