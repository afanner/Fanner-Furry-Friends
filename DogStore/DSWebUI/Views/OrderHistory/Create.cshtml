@model DSWebUI.Models.BuyerHistoryVM

@{
    ViewData["Title"] = "Create";
}

<h1>Order History Request</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderOption" class="control-label"></label>
                <select asp-for="OrderOption" class="form-control">
                    <option value=1>Sort by Date (Oldest to Newest)</option>
                    <option value=2>Sort by Date (Newest to Oldest)</option>
                    <option value=3>Sort by Cost (Least to Most Expensive)</option>
                    <option value=4>Sort by Cost (Most to Least Expensive)</option>
                </select>
                <span asp-validation-for="OrderOption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="BuyerNumber" value=@Model.BuyerNumber />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Dog Buyer List", "Index", "DogBuyer", new { })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
